<UserControl x:Class="InsightMediaGenerator.Views.PromptBuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- ============================== -->
            <!-- 左: キーワード選択エリア         -->
            <!-- ============================== -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">
                <TextBlock Text="プロンプトビルダー" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock Text="キーワードをクリックして選択 → プロンプトを自動生成"
                           Foreground="{StaticResource TextTertiaryBrush}" FontSize="12" Margin="0,0,0,15"/>

                <!-- カテゴリ別キーワード -->
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,12">
                                <!-- カテゴリ名 -->
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"
                                           Foreground="{StaticResource TextAccentBrush}" Margin="0,0,0,6"/>

                                <!-- キーワードタグ一覧 (WrapPanel) -->
                                <ItemsControl ItemsSource="{Binding Keywords}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <ToggleButton IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          Content="{Binding DisplayName}"
                                                          Margin="0,0,6,6" Padding="10,5"
                                                          FontSize="12" Cursor="Hand">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background" Value="{StaticResource BgSecondaryBrush}"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource BorderDefaultBrush}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border x:Name="border"
                                                                            Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="14"
                                                                            Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                                          VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource Accent500Brush}"/>
                                                                <Setter Property="Foreground" Value="{StaticResource TextOnAccentBrush}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource Accent700Brush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderBrush" Value="{StaticResource Accent500Brush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- カスタムキーワード追加 -->
                <Border BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="0,1,0,0"
                        Padding="0,12,0,0" Margin="0,5,0,0">
                    <StackPanel>
                        <TextBlock Text="カスタムキーワードを追加" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding CustomKeyword, UpdateSourceTrigger=PropertyChanged}"
                                     Height="34" Margin="0,0,8,0"/>
                            <Button Grid.Column="1" Content="追加" Command="{Binding AddCustomKeywordCommand}"
                                    Padding="14,6" FontSize="12"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- ============================== -->
            <!-- 右: プレビュー＆ネガティブ       -->
            <!-- ============================== -->
            <StackPanel Grid.Column="1">
                <!-- 生成されたプロンプト -->
                <TextBlock Text="生成プロンプト" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>
                <Border Background="{StaticResource BgElevatedBrush}" CornerRadius="8"
                        BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1"
                        Padding="10" Margin="0,0,0,5" MinHeight="80">
                    <TextBlock Text="{Binding BuiltPrompt}" TextWrapping="Wrap" FontSize="12"
                               Foreground="{StaticResource TextPrimaryBrush}"/>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                    <Button Content="コピー" Command="{Binding CopyPromptToClipboardCommand}"
                            Padding="10,4" FontSize="11" Margin="0,0,6,0"/>
                    <Button Content="全解除" Command="{Binding ClearAllSelectionsCommand}"
                            Style="{StaticResource DangerSubtleButtonStyle}" Padding="10,4" FontSize="11"/>
                </StackPanel>

                <!-- ネガティブプロンプト -->
                <TextBlock Text="除外キーワード（ネガティブ）" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,5"/>
                <TextBlock Text="ONのキーワードがネガティブプロンプトに入ります"
                           Foreground="{StaticResource TextTertiaryBrush}" FontSize="11" Margin="0,0,0,8"/>

                <ItemsControl ItemsSource="{Binding NegativeKeywords}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,3" Padding="4,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding DisplayName}"
                                               VerticalAlignment="Center" FontSize="12" Margin="6,0,0,0"/>
                                    <Button Grid.Column="2" Content="x" FontSize="10" Padding="4,1"
                                            Command="{Binding DataContext.RemoveNegativeKeywordCommand,
                                                RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource DangerSubtleButtonStyle}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- ネガティブカスタム追加 -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding CustomNegativeKeyword, UpdateSourceTrigger=PropertyChanged}"
                             Height="30" FontSize="12" Margin="0,0,6,0"/>
                    <Button Grid.Column="1" Content="追加" Command="{Binding AddCustomNegativeKeywordCommand}"
                            Padding="10,4" FontSize="11"/>
                </Grid>

                <!-- 生成ネガティブプロンプト -->
                <TextBlock Text="ネガティブプロンプト" FontWeight="SemiBold" FontSize="13" Margin="0,15,0,5"/>
                <Border Background="{StaticResource BgElevatedBrush}" CornerRadius="8"
                        BorderBrush="{StaticResource BorderDefaultBrush}" BorderThickness="1"
                        Padding="10" MinHeight="50">
                    <TextBlock Text="{Binding BuiltNegativePrompt}" TextWrapping="Wrap" FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </Border>
                <Button Content="ネガティブをコピー" Command="{Binding CopyNegativeToClipboardCommand}"
                        HorizontalAlignment="Right" Padding="10,4" FontSize="11" Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
